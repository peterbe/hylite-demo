{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "codegens": "bun run src/build-css-index.ts && bun run src/copy-css-styles.ts && bun run src/copy-hljs-languages.ts && bun run src/copy-code-samples.ts && bun run src/copy-code-samples.ts",
    "predev": "bun run codegens",
    "prebuild": "bun run codegens",
    "lint": "biome check",
    "lint:fix": "biome check --write --unsafe",
    "dev": "bun --hot src/index.ts",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "prestart": "bun run codegens",
    "##start": "NODE_ENV=production bun src/index.ts",
    "start": "serve dist",
    "prepare": "husky"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "dompurify": "^3.3.0",
    "highlight.js": "^11.11.1",
    "react": "^19",
    "react-dom": "^19",
    "swr": "^2.3.6",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "husky": "^9.1.7",
    "serve": "^14.2.5"
  }
}
